{
  "compilerOptions": {
    "target": "ES2022", 
    "lib": ["es2023"],
    "types": ["@types/babel__core", "@types/babel__generator", "@types/babel__template", "@types/estree"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
